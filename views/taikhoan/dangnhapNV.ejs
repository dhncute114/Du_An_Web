<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <section class="vh-100" style="background-color: #508bfc;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5">

                            <h3 class="mb-4 text-center">NHÂN VIÊN</h3>
                            <label class="form-label text-danger d-flex justify-content-center">
                                <%= msg %>
                            </label>
                            <form action="" method="POST">
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="username">Username</label>
                                    <input type="text" class="form-control form-control-lg" id="username"
                                        name="usernameNV" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="password">Password</label>
                                    <input type="password" name="passNV" id="password"
                                        class="form-control form-control-lg" />
                                </div>

                                <div class="form-check d-flex justify-content-start mb-4">
                                    <input class="form-check-input" type="checkbox" value="" id="rememberMe" />
                                    <label class="form-check-label" for="rememberMe">Nhớ tài khoản</label>
                                </div>

                                <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                            </form>
                            <div class="text-center">
                                <p class="mb-0 mt-2">Bạn là quản lý ? <a href="/" class="text-black-50 fw-bold"> Đăng nhập</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        const rememberMeCheckbox = document.getElementById('rememberMe');
        const usernameInput = document.getElementsByName('usernameNV')[0];
        const passwordInput = document.getElementsByName('passNV')[0];

        // Load saved login credentials if available
        window.onload = function () {
            if (localStorage.getItem('usernameNV') && localStorage.getItem('passwordNV')) {
                usernameInput.value = localStorage.getItem('usernameNV');
                passwordInput.value = localStorage.getItem('passwordNV');
                rememberMeCheckbox.checked = true;
            }
        }

        // Save login credentials to local storage if "Remember Me" is checked
        const form = document.querySelector('form');
        form.addEventListener('submit', function (event) {
            if (rememberMeCheckbox.checked) {
                localStorage.setItem('usernameNV', usernameInput.value);
                localStorage.setItem('passwordNV', passwordInput.value);
            } else {
                localStorage.removeItem('usernameNV');
                localStorage.removeItem('passwordNV');
            }
        });
    </script>

    <%- include('../inc/bottom') %>