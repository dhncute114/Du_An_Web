                            <div class="rounded-2 border border-secondary  ps-2 pe-5 pt-5 pb-5 mb-2"
                                style="white-space: nowrap;">
                                <p style="font-weight: bold; display: inline;">Mô tả:</p>
                                <%= sp.mota %>
                            </div>
                            <div class="rounded-2 border border-secondary p-2 mb-2" style="white-space: nowrap;">
                                <p style="font-weight: bold; display: inline;">Số lượng: </p>
                                <%= sp.soluong %>
                            </div>
                            <div class="rounded-2 border border-secondary  p-2 mb-2" style="white-space: nowrap;">
                                <p style="font-weight: bold; display: inline;">Giá tiền:</p>
                                <%= sp.gia %> VND
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../inc/bottom') %>