    <div class="container d-flex justify-content-center mt-4">
        <div class="row col col-12">
            <div class="card col col-sm-4 me-3 ms-5" style="border-radius: 10px;">
                <div class="card-body">
                    <div class="row">
                        <div class="align-self-center">
                            <img src="<%= sp.image %>" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>

            <div class="card col col-sm-7" style="border-radius: 10px;">
                <div class="card-body">
                    <h1 class="d-flex justify-content-center p-1">
                        <%= sp.tensp %>
                    </h1>
                        <div class="row d-flex justify-content-center">
                            <div class="rounded-2 border border-secondary p-2 mb-2 " style="white-space: nowrap;">
                                <p style="font-weight: bold; display: inline;">Thể loại:</p>
                                <% if (sp.id_theloai?.theloai==null) { %>
                                    Đã bị xoá
                                    <% } else { %>
                                        <%= sp.id_theloai.theloai %>
                                            <% } %>
