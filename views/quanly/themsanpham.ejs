<%- include('../inc/navQL') %>
    <div class="container">
        <h2 class="d-flex justify-content-center p-2">Thêm sản phẩm mới</h2>
        <h6 class="d-flex justify-content-center text-danger"><%= msg %></h3>
        <form method="POST"  enctype="multipart/form-data">
            <div class="form-group">
                <label for="product-name">Tên sản phẩm:</label>
                <input type="text" class="form-control m-2" name="tensp" placeholder="Nhập tên sản phẩm">
            </div>
            
            <div class="form-group">
                <label for="">Thể Loại:</label>
                <select class="form-control m-2" name="theloai" data-bs-toggle="dropdown" aria-expanded="false">
                    <% listtl.forEach((row)=> { %>
                        <option value="<%= row._id %>"><%= row.theloai %></option>
                    <% }); %>  
                </select>
            </div>

            <div class="form-group">
                <label for="image">Ảnh sản phẩm:</label>
                <input type="file" class="form-control-file m-2" name="image">
            </div>
            <div class="form-group">
                <label for="product-description">Mô tả sản phẩm:</label>
                <textarea class="form-control m-2" name="mota" rows="3"
                    placeholder="Nhập mô tả sản phẩm"></textarea>
            </div>
            <div class="form-group">
                <label for="product-name">Số lượng:</label>
                <input type="text" class="form-control m-2" name="soluong" placeholder="Nhập số lượng sản phẩm">
            </div>
            <div class="form-group">
                <label for="product-price">Giá tiền:</label>
                <div class="input-group m-2">
                    <input type="text" class="form-control" name="gia" placeholder="Nhập giá tiền">
                    <div class="input-group-append">
                        <span class="input-group-text">VNĐ</span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-danger m-2">Thêm sản phẩm</button>
        </form>
    </div>
