<%- include('../inc/navNV')%>

    <div class="container">
        <h2 class="d-flex justify-content-center p-2 mb-5">DANH SÁCH HOÁ ĐƠN</h2>

        <div id="noidung" class="container position-relative">

            <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3" style="border-radius: 10px;">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item active">
                                <a class="btn btn-danger" href="/quanly/taotknv">Tạo tài khoản nhân viên</a>
                            </li>
                        </ul>
                        <form class="d-flex" method="GET" action="" id="search-form">
                            <input class="form-control me-2" type="search" placeholder="Tìm kiếm theo tên khách hàng"
                                aria-label="Search" name="tenkh">
                            <button class="btn btn-warning" type="submit">Tìm kiếm</button>
                        </form>
                    </div>
                </div>
            </nav>

            <div class="card" style="border-radius: 10px;">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tên khách hàng</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Tổng tiền</th>
                                    <th>Tác vụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% listhd.forEach((row)=> { %>
                                    <tr>
                                        <td>
                                            <%= row.tenkh %>
                                        </td>
                                        <td>
                                            <%= row.id_tensp.tensp %>
                                        </td>
                                        <td>
                                            <%= row.tongtien %>
                                        </td>
                                        <td>

                                            <a class="btn btn-outline-danger" data-bs-toggle="modal"
                                                data-bs-target="#delete-modal"
                                                onclick="setDeleteURL('<%= row.id %>')">Xoá</a>

                                            <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog"
                                                aria-labelledby="delete-modal-label" aria-hidden="true">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="delete-modal-label">Xác nhận xoá
                                                                sản phẩm
                                                            </h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Bạn có chắc chắn muốn xoá sản phẩm này không?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <a type="button" class="btn btn-danger" id="delete-confirm"
                                                                href="#">Xoá</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <script>
                                                function setDeleteURL(id) {
                                                    var deleteURL = "/quanly/taikhoan/xoatk/" + id;
                                                    document.getElementById("delete-confirm").href = deleteURL;
                                                }
                                            </script>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


        <%- include('../inc/bottom') %>